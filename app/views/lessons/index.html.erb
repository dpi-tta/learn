<div class="container">
  <% content_for :title, "Lessons" %>

  <h1>Lessons</h1>

  <div id="lessons">
    <% @lessons.each do |lesson| %>
      <strong><%= lesson.title %>:</strong>
      <i><%= lesson.description&.truncate_words(25) %></i>
      <p>
        <%= link_to "Show this lesson", lesson %>
      </p>
    <% end %>
  </div>

  <%= link_to "New lesson", new_lesson_path %>
</div>
