<%# TODO: break into tabs (plain lesson / github lesson)%>
<%= form_with(model: lesson) do |form| %>
  <% if lesson.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
        <% lesson.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
    <div id="titleHelp" class="form-text">Title is over written if github repository url present</div>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.textarea :description, class: "form-control" %>
    <div id="descriptionHelp" class="form-text">Description is over written if github repository url present</div>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.textarea :content, class: "form-control" %>
    <div id="contentHelp" class="form-text">Content is over written if github repository url present</div>
  </div>

  <div class="mb-3">
    <%= form.label :github_repository_url, class: "form-label" %>
    <%= form.text_field :github_repository_url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :github_repository_branch, class: "form-label" %>
    <%= form.text_field :github_repository_branch, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
