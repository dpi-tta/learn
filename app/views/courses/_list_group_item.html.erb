<%= link_to course, class: "list-group-item list-group-item-action" do %>
  <div class="d-flex justify-content-between align-items-center mb-2">
    <h5 class="mb-0"><%= course.title %></h5>
    <span class="badge <%= bootstrap_badge_class(course.level) %>">
      <%= course.level.to_s.titleize %>
    </span>
  </div>
  <p class="mb-1"><%= course.description&.truncate_words(25) %></p>
<% end %>
